.swiper {
  width: 100vw;
  height: 100%;
  overflow: hidden;
}

.swiper-horizontal, .swiper-inner {
  display: flex;
}

.swiper-horizontal .swiper-inner {
  height: 100%;
}

.swiper-vertical .swiper-inner {
  flex-direction: column;
  width: 100%;
}

.swiper-animation {
  overflow: hidden;
}

.swiper-animation .swiper-inner {
  transition: transform 600ms ease-in;
}

:host {
  max-height: 100%;
  display: block;
}